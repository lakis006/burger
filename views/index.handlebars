<div class="container">

    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <img src="" alt="A Burger" id="burger-img">
            <h1>Eat Da Burger</h1>
        </div>
    </div>

    <div class="col-xs-6" class="task">
        <div class="row">
            {{#each burger_data}}
            {{#unless this.devoured}}
            <div id="fresh-burger" class="col-xs-9 tex-center">
                <pre id="text" class="col-xs-9">
                    {{this.id}}. {{this.burger_name}}
                </pre>
            </div>
        </div>
    </div>
</div>